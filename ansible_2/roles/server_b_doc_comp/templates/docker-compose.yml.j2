version: "3"
services:
  prometheus:
    image: prom/prometheus
    restart: always
    container_name: prometheus
    ports:
      - 9090:9090
    volumes:
      - {{  path_config  }}/prometheus.yml:/etc/prometheus/prometheus.yml
      - {{  path_config  }}/rules.yml:/etc/prometheus/rules.yml
  grafana:
    image: grafana/grafana
    restart: always
    container_name: grafana 
    ports:
      - 3000:3000